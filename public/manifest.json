{
  "manifest_version": 3,
  "name": "YouTube Remaining Time",
  "version": "1.0.0",
  "description": "Shows remaining time next to the YouTube timer.",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
